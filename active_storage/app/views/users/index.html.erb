<% if @users.empty? %>
  <p>Sorry, no users yet.</p>
<% else %>
  <ul>
    <% @users.each do |user| %>
      <li>
        <%= user.name %>: 
        <% if @user.motto.attached? %>
          <span style="font-style: italic;"><%= @user.motto.download %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>