<%= form_with model: @user, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>
  </div>

  <div>
    <%= form.label :color, 'What is your favorite color?' %>
    <%= form.text_field :color %>
  </div>

  <%= form.submit %>
<% end %>